<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HAFFA"
        tools:targetApi="31">
        <activity
            android:name=".Profile.publishView"
            android:exported="false" />
        <activity
            android:name=".Profile.Gallery"
            android:exported="false" />
        <activity
            android:name=".Profile.GalleryView"
            android:exported="false" />
        <activity
            android:name=".journey.activity.ShowJourneyActivity"
            android:exported="false" />
        <activity
            android:name=".journey.activity.ShowAllJourneysActivity"
            android:exported="false" />
        <activity
            android:name=".journey.activity.RegisterJourneyActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>