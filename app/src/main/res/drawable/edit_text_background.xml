<!-- res/drawable/edit_text_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Establece el color de fondo (en este caso, blanco) -->
    <solid android:color="@color/gray_100" />
    <!-- Establece el radio de borde para hacerlo redondeado (en este caso, 16dp) -->
    <corners android:radius="12dp" />
    <!-- Establece el ancho y el color del borde (0dp para quitar el borde) -->
    <stroke android:width="0dp" android:color="@android:color/transparent" />
</shape>