<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="50dp"
    android:layout_marginVertical="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    tools:context="com.example.myapplicationviews.ScoreChallenge">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F3E9FF">

        <TextView
            android:id="@+id/tvPersonalScore"
            android:layout_width="57dp"
            android:layout_height="51dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#B57AFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="58" />


        <TextView
            android:id="@+id/tvTittleScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="puntos"
            android:textColor="#B57AFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvDescriptionScore"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvPersonalScore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/tvDescriptionScore"
            android:layout_width="126dp"
            android:layout_height="53dp"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPersonalScore"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Realiza Patios en 25 min" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>